<table class="table">
<thead>
	<tr>
        <th>Titre</th>
        <th>Description</th>
        <th>Lecture</th>
        <th>Modification</th>
        <th>Suppression</th>
	</tr>
</thead>
{% for f in livres %}
<tbody>
	<tr>
		<td>{{ f.titre | capitalize}}</td>
		<td>{{ f.description | truncate(50, false, "..." | capitalize) }}</td>
		<td><a href="{{ path('myapp_livre_voir', { 'id': f.id }) }}">Voir</a></td>
		<td><a href="{{ path('myapp_livre_modifier', { 'id': f.id }) }}">Modifier</a></td>
		<td><a href="{{ path('myapp_livre_supprimer', { 'id': f.id }) }}">Supprimer</a></td>
	</tr>
</tbody>
{% else %}
	<tr>
		<td>Aucun livre n’a été trouvé.</td>
	</tr>
{% endfor %}
</table>



