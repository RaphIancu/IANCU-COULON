<table class="table">
<thead>
	<tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Date de naissance</th>
        <th>Sexe</th>
        <th>Modifications</th>
        <th>Suppression</th>
	</tr>
</thead>
{% for a in autheurs %}
<tbody>
    <tr>
		<td>{{ a.nom | upper}}</td>
		<td>{{ a.prenom | capitalize}}</td>
		<td>{{ a.dateNaissance|date('d/m/Y') }}</td>
		<td>{{ a.sexe }}</td>
		<td><a href="{{ path('myapp_autheur_modifier', { 'id': a.id }) }}">Modifier</a></td>
		<td><a href="{{ path('myapp_autheur_supprimer', { 'id': a.id }) }}">Supprimer</a></td>
	</tr>
</tbody>
{% else %}
    <tr>
		<td>Aucun autheur n'a été trouvé.</td>
    </tr>
{% endfor %}
</table>